@model IEnumerable<Hospital_Management_Database.Models.Staff>

@{
    ViewData["Title"] = "Index";
}

<h1>Staff</h1>

<p>
    <a asp-action="Create">Add New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StaffFirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StaffLastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StaffGender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StaffAge)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StaffAddress)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StaffFirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StaffLastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StaffGender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StaffAge)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StaffAddress)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StaffId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.StaffId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.StaffId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
