@model IEnumerable<Hospital_Management_Database.Models.AdmissionDischarge>

@{
    ViewData["Title"] = "Index";
}

<h1>Admission Discharged</h1>

<p>
    <a asp-action="Create">Add New</a>
</p>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Ward Number</a>
            </th>
        
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Bed Number</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dateadmitted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.datedischarged)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.wardnumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.bednumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dateadmitted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.datedischarged)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AdmissionDischargeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AdmissionDischargeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AdmissionDischargeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
